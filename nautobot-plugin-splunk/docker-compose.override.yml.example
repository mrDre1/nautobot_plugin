---
version: "3.7"
services:
  nautobot:
    image: "networktocode/nautobot:${NAUTOBOT_IMAGE:-1.2.8}-py${PYTHON_VER:-3.9}"
    build:
      context: "."
      dockerfile: "Dockerfile-Plugins"
      args:
        PYTHON_VER: "${PYTHON_VER:-3.9}"
    env_file:
      - "local.env"
    ports:
      - "8443:8443"
      - "8080:8080"
    restart: "unless-stopped"
  nautobot-worker:
    image: "networktocode/nautobot:${NAUTOBOT_IMAGE:-1.2.8}-py${PYTHON_VER:-3.9}"
    build:
      context: "."
      dockerfile: "Dockerfile-Plugins"
      args:
        PYTHON_VER: "${PYTHON_VER:-3.9}"
    env_file:
      - "local.env"
    restart: "unless-stopped"
  celery_worker:
    image: "networktocode/nautobot:${NAUTOBOT_IMAGE:-1.2.8}-py${PYTHON_VER:-3.9}"
    build:
      context: "."
      dockerfile: "Dockerfile-Plugins"
      args:
        PYTHON_VER: "${PYTHON_VER:-3.9}"
    env_file:
      - "local.env"
    restart: "unless-stopped"
